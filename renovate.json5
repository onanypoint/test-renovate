{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  branchPrefix: 'chore-renovate-',
  constraintsFiltering: 'strict',
  lockFileMaintenance: {
    enabled: true,
  },
  extends: [
    'config:best-practices',
    'group:allDigest',
    'group:allNonMajor',
    ':semanticCommitTypeAll(chore)',
  ],
  packageRules: [
    {
      "description": "Always create PRs for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Always create PRs for all Django updates (patch/minor/major)",
      "matchPackageNames": [
        "django"
      ],
      "automerge": false
    },
    {
      "description": "Use update-lockfile strategy for pep621 manager with uv",
      "matchManagers": [
        "pep621"
      ],
      "rangeStrategy": "pin"
    },
    {
      "description": "Python version management",
      "matchDepNames": [
        "python"
      ],
      "matchManagers": [
        "pep621"
      ],
      "rangeStrategy": "replace"
    },
  ],
}