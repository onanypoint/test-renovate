{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  branchPrefix: 'chore-renovate-',
  constraintsFiltering: 'strict',
  "rangeStrategy": "pin",
  rebaseWhen: 'auto',
  labels: [
    'type::renovate',
  ],
  schedule: [
    'after 6am and before 8am every weekday',
  ],
  minimumReleaseAge: '3 days',
  prConcurrentLimit: 10,
  dependencyDashboard: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'type::renovate',
      'priority::high',
    ],
    schedule: [
      'at any time',
    ],
    minimumReleaseAge: '1 days',
    automerge: false,
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'on monday',
    ],
  },
  extends: [
    'config:best-practices',
    'group:allDigest',
    'group:allNonMajor',
    ':semanticCommitTypeAll(chore)',
  ],
  packageRules: [
    {
      allowedVersions: '<=3.12',
      matchDepNames: [
        'python',
      ],
    },
    {
      groupName: 'python dependencies (non-major)',
      description: 'Group and automerge minor and patch updates for all dependencies except Django',
      matchManagers: [
        'pep621',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      matchPackageNames: [
        '!Django',
        '!django',
      ],
    },
    {
      description: 'Open separate MR for each major update (except Django)',
      matchManagers: [
        'pep621',
      ],
      matchUpdateTypes: [
        'major',
      ],
      groupName: null,
      matchPackageNames: [
        '!django',
        '!Django',
      ],
    },
    {
      groupName: 'django',
      matchManagers: [
        'pep621',
      ],
      matchPackageNames: [
        'django',
        'Django',
      ],
    },
  ],
}