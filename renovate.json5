{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  branchPrefix: 'chore-renovate-',
  constraintsFiltering: 'none',
  lockFileMaintenance: {
    enabled: true,
  },
  extends: [
    'config:best-practices',
    'group:allDigest',
    ':semanticCommitTypeAll(chore)',
  ],
  packageRules: [
    {
      description: 'Always create PRs for major updates',
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
    },
    {
      description: 'Always create PRs for all Django updates (patch/minor/major)',
      matchPackageNames: [
        'django',
      ],
      automerge: false,
    },
    {
      description: 'Limit Django to 5.2.x - block version 6.0 and above',
      matchPackageNames: [
        'django',
      ],
      allowedVersions: '<6.0',
    },
    {
      description: 'Create separate PR for Python version updates',
      matchDepNames: [
        'python',
      ],
      matchManagers: [
        'pep621',
      ],
      groupName: null,
      rangeStrategy: 'replace',
      automerge: false,
    },
    {
      description: 'Group all non-major dependency updates except Python',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'all non-major dependencies',
      matchPackageNames: [
        '!python',
      ],
    },
    {
      description: 'Use pin strategy for pep621 manager',
      matchManagers: [
        'pep621',
      ],
      rangeStrategy: 'pin',
      matchDepNames: [
        '!python',
      ],
    },
  ],
}
