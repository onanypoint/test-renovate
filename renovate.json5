{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "chore-renovate-",
  "constraintsFiltering": "strict",
  "rangeStrategy": "update-lockfile",
  "rebaseWhen": "auto",
  "labels": ["type::renovate"],
  "schedule": ["after 6am and before 8am every weekday"],
  "minimumReleaseAge": "3 days",
  "prConcurrentLimit": 10,
  "dependencyDashboard": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "type::renovate",
      "priority::high",
    ],
    "schedule": [
      "at any time"
    ],
    "minimumReleaseAge": "1 days",
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["on monday"]
  },
  "extends": [
    "config:best-practices",
    "group:allDigest",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "packageRules": [
    {
      "allowedVersions": "<=3.12",
      "matchDepNames": [
        "python"
      ]
    },
    // ####################################
    // # PYTHON DEPENDENCIES
    // ####################################
    {
      "groupName": "python dependencies (non-major)",
      "description": "Group and automerge minor and patch updates for all dependencies except Django",
      "matchManagers": [
        "pep621"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "excludePackageNames": [
        "Django",
        "django"
      ],
    },
    {
      "description": "Open separate MR for each major update (except Django)",
      "matchManagers": [
        "pep621"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "excludePackageNames": [
        "django",
        "Django"
      ],
      "groupName": null
    },
    {
      "groupName": "django",
      "matchManagers": [
        "pep621"
      ],
      "matchDepNames": [
        "django",
        "Django"
      ]
    }
  ]
}