{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  branchPrefix: 'chore-renovate-',
  constraintsFiltering: 'strict',
  "rangeStrategy": "pin",
  lockFileMaintenance: {
    enabled: true,
  },
  extends: [
    'config:best-practices',
    'group:allDigest',
    'group:allNonMajor',
    ':semanticCommitTypeAll(chore)',
  ],
  packageRules: [
    {
      allowedVersions: '<=3.12',
      matchDepNames: [
        'python',
      ],
    },
    {
      groupName: 'python dependencies (non-major)',
      description: 'Group and automerge minor and patch updates for all dependencies except Django',
      matchManagers: [
        'pep621',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      matchPackageNames: [
        '!Django',
        '!django',
      ],
    },
    {
      description: 'Open separate MR for each major update (except Django)',
      matchManagers: [
        'pep621',
      ],
      matchUpdateTypes: [
        'major',
      ],
      groupName: null,
      matchPackageNames: [
        '!django',
        '!Django',
      ],
    },
    {
      groupName: 'django',
      matchManagers: [
        'pep621',
      ],
      matchPackageNames: [
        'django',
        'Django',
      ],
    },
  ],
}